# Azure OpenAI Configuration - Chat Model (e.g., Phi-4-mini-instruct)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=Phi-4-mini-instruct
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure OpenAI Configuration - Embedding Model (e.g., text-embedding-3-small)
# If you have separate deployment for embeddings with different endpoint/key
AZURE_OPENAI_EMBEDDING_ENDPOINT=https://your-resource-name.openai.azure.com/openai/deployments/text-embedding-3-small/embeddings?api-version=2023-05-15
AZURE_OPENAI_EMBEDDING_API_KEY=your_embedding_api_key_here
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Alternative: OpenAI Configuration (if not using Azure)
OPENAI_API_KEY=your-openai-api-key-here

# Azure AI Search Configuration (Optional - for production RAG)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX_NAME=documents-index

# Application Settings
APP_NAME=AI Agent RAG System
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# RAG Settings
EMBEDDING_MODEL=text-embedding-ada-002
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=3

# Agent Settings
MAX_ITERATIONS=5
TEMPERATURE=0.7
MAX_TOKENS=1000

# Server Settings
HOST=0.0.0.0
PORT=8000
